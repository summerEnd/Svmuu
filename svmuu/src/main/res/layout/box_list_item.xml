<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_corner_background"
    android:gravity="center"
    android:padding="@dimen/dimen_11px"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/avatarSize"
        android:layout_height="@dimen/avatarSize"
        android:src="@drawable/iron_box"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/dimen_8px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text"
            android:textColor="@color/black"
            android:textSize="@dimen/text_26px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下个阶段热点推荐"/>
        <TextView
            android:id="@+id/time"
            android:layout_marginTop="@dimen/dimen_10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新时间：2015-09-22 09:11"/>
    </LinearLayout>


</LinearLayout>