<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yjy998.ui.activity.apply.ApplyActivity">

    <com.sp.lib.widget.PagerSlidingTabStrip
        android:id="@+id/tabStrip"
        android:layout_width="match_parent"
        app:tabBackground="@drawable/tab_selector"
        app:curTabtextColor="@color/deepBlue"
        app:underlineColor="@color/deepBlue"
        app:underlineHeight="0dp"
        app:dividerColor="#0000"
        android:background="@color/lightGray"
        app:indicatorColor="@color/deepBlue"
        app:indicatorHeight="2dp"
        app:tabtextAllCaps="false"
        app:curTabtextSize="@dimen/text_22px"
        app:tabtextSize="@dimen/text_22px"
        android:layout_height="@dimen/center_tab_height" />

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:id="@+id/pager"
        android:layout_height="match_parent" />
</LinearLayout>
