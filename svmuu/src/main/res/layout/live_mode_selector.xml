<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:divider="@drawable/horizontal_divider_gray"
    app:showDividers="middle"
    android:background="@drawable/gray_corner_background"
    android:orientation="vertical">

    <CheckedTextView
        android:id="@+id/videoMode"
        style="@style/liveTypeSelector"
        android:checked="true"
        android:drawableLeft="@drawable/mode_video"
        android:text="视频模式"/>


    <CheckedTextView
        android:id="@+id/audioMode"
        style="@style/liveTypeSelector"
        android:drawableLeft="@drawable/mode_audio"
        android:text="语音模式"/>


    <CheckedTextView
        android:id="@+id/textMode"
        style="@style/liveTypeSelector"
        android:drawableLeft="@drawable/mode_text"
        android:text="文本模式"/>
</android.support.v7.widget.LinearLayoutCompat>