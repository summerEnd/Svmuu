<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yjy998.ui.activity.pay.YbPayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_15px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="@dimen/dimen_25px"
            android:paddingBottom="@dimen/dimen_25px"
            android:paddingLeft="@dimen/dimen_20px"
            android:paddingRight="@dimen/dimen_20px"
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/text_24px"
                android:textColor="@color/textColorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户名称：" />

            <TextView
                android:id="@+id/accountText"
                android:textSize="@dimen/text_24px"
                android:textColor="@color/textColorDeepGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12343434545" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--这里的tag代表的是对应易宝的数量-->
            <RelativeLayout
                style="@style/payYbItem"
                android:tag="50000">

                <TextView
                    style="@style/payYbTextNumber"
                    android:text="50,000" />

                <TextView style="@style/payYbText" />
            </RelativeLayout>
            <!--这里的tag代表的是对应易宝的数量-->
            <RelativeLayout
                style="@style/payYbItem"
                android:tag="30000"
                android:layout_marginLeft="@dimen/dimen_10px">

                <TextView
                    style="@style/payYbTextNumber"
                    android:text="30,000" />

                <TextView style="@style/payYbText" />
            </RelativeLayout>
            <!--这里的tag代表的是对应易宝的数量-->
            <RelativeLayout
                style="@style/payYbItem"
                android:tag="20000"
                android:layout_marginLeft="@dimen/dimen_10px">

                <TextView
                    style="@style/payYbTextNumber"
                    android:text="20,000" />

                <TextView style="@style/payYbText" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--这里的tag代表的是对应易宝的数量-->
            <RelativeLayout
                style="@style/payYbItem"
                android:tag="10000">

                <TextView
                    style="@style/payYbTextNumber"
                    android:text="10,000" />

                <TextView style="@style/payYbText" />
            </RelativeLayout>
            <!--这里的tag代表的是对应易宝的数量-->
            <RelativeLayout
                style="@style/payYbItem"
                android:tag="5000"
                android:layout_marginLeft="@dimen/dimen_10px">

                <TextView
                    style="@style/payYbTextNumber"
                    android:text="5,000" />

                <TextView style="@style/payYbText" />
            </RelativeLayout>
            <!--这里的tag代表的是对应易宝的数量-->
            <RelativeLayout
                style="@style/payYbItem"
                android:tag="500"
                android:layout_marginLeft="@dimen/dimen_10px">

                <TextView
                    style="@style/payYbTextNumber"
                    android:text="500" />

                <TextView style="@style/payYbText" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/dimen_25px"
        android:paddingBottom="@dimen/dimen_25px"
        android:paddingLeft="@dimen/dimen_20px"
        android:paddingRight="@dimen/dimen_20px"
        android:orientation="horizontal">

        <TextView
            android:textSize="@dimen/text_24px"
            android:textColor="@color/textColorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入其他金额：" />

        <EditText
            android:id="@+id/amoutEdit"
            android:textSize="@dimen/text_24px"
            android:inputType="number"
            android:textColor="@color/textColorDeepGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:hint="(1元=1易宝)" />
    </LinearLayout>

    <Button
        android:id="@+id/confirmBtn"
        style="@style/blueButton.big"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:layout_marginRight="@dimen/dimen_40px"
        android:layout_marginTop="@dimen/dimen_30px"
        android:text="@string/confirmPay"
        android:layout_width="match_parent" />
</LinearLayout>
