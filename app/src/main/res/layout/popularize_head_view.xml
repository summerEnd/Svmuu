<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/popularize_bg"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_30px"
        android:paddingBottom="@dimen/dimen_30px"
        android:paddingLeft="@dimen/dimen_20px"
        android:paddingRight="@dimen/dimen_20px"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_26px"
            android:text="推广收益（易币）" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_45px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/integerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FAFFD4"
                android:textStyle="bold"
                android:textSize="@dimen/text_45px"
                android:text="2400" />

            <TextView
                android:id="@+id/floatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FAFFD4"
                android:textStyle="bold"
                android:textSize="@dimen/text_34px"
                android:text=".00" />
        </LinearLayout>

        <TextView
            android:id="@+id/invitePeople"
            android:layout_marginTop="@dimen/dimen_50px"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_26px"
            android:text="@string/total_s_people" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/invite"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="@dimen/dimen_11px"
            android:paddingBottom="@dimen/dimen_11px"
            android:background="#E4E4E4"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_45px"
                android:layout_height="@dimen/dimen_45px"
                android:src="@drawable/ic_invite" />

            <TextView
                android:textColor="#18326B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invite_friend" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="@dimen/dimen_11px"
            android:paddingBottom="@dimen/dimen_11px"
            android:id="@+id/introduce"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#E4E4E4"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_45px"
                android:layout_height="@dimen/dimen_45px"
                android:src="@drawable/ic_introduce" />

            <TextView
                android:textColor="#18326B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/act_introduce" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/popularizeText1"
        android:layout_marginTop="2dp"
        android:paddingLeft="@dimen/dimen_24px"
        android:paddingRight="@dimen/dimen_24px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/income_flow" />

    <LinearLayout
        android:id="@+id/headBar"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/popularizeText1.weight"
            android:text="邀请人" />

        <TextView
            style="@style/popularizeText1.weight"
            android:text="时间" />

        <TextView
            style="@style/popularizeText1.weight"
            android:layout_weight="1.2"
            android:text="行为" />

        <TextView
            style="@style/popularizeText1.weight"
            android:text="交易量" />

        <TextView
            style="@style/popularizeText1.weight"
            android:text="收益" />
    </LinearLayout>
</LinearLayout>