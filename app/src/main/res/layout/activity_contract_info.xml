<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dimen_40px"
    android:background="@color/white"
    android:paddingBottom="@dimen/dimen_11px"
    android:paddingLeft="@dimen/dimen_50px"
    android:paddingRight="@dimen/dimen_50px"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合约编号：1231231231" />

        <TextView
            android:layout_marginLeft="@dimen/dimen_25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型：T+9" />
    </LinearLayout>

    <LinearLayout
        style="@style/contractInfoLayoutStyle"
        android:layout_weight="0"
        android:layout_width="match_parent">

        <TextView
            android:textSize="@dimen/capitalTextSize"
            android:textColor="@color/textColorBlack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="总资产：789,875.00"
            android:layout_height="wrap_content" />


        <TextView
            android:textSize="@dimen/capitalTextSize"
            android:textColor="@color/textColorBlack"
            android:layout_width="wrap_content"
            android:text="追加资金"
            android:background="@drawable/bitmap_red_button"
            android:layout_height="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout style="@style/contractInfoLayoutStyle">

            <TextView
                android:textSize="@dimen/capitalTextSize"
                android:textColor="@color/textColorBlack"
                android:layout_width="wrap_content"
                android:text="盈亏："
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/usableText"
                android:textSize="@dimen/capitalTextSize"
                android:textColor="@color/textColorRed"
                android:layout_width="wrap_content"
                android:text="@string/__testNumber"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/dimen_10px"
            android:layout_marginLeft="@dimen/dimen_10px"
            style="@style/contractInfoLayoutStyle">

            <TextView
                android:textSize="@dimen/capitalTextSize"
                android:textColor="@color/textColorBlack"
                android:layout_width="wrap_content"
                android:text="盈亏率"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/capitalTextSize"
                android:textColor="@color/textColorBlack"
                android:id="@+id/balanceText"
                android:layout_width="wrap_content"
                android:text="@string/__testNumber"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10px"
        android:orientation="horizontal">

        <LinearLayout style="@style/contractInfoLayoutStyle">

            <TextView
                android:textSize="@dimen/capitalTextSize"
                android:textColor="@color/textColorBlack"
                android:layout_width="wrap_content"
                android:text="仓位"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/capitalTextSize"
                android:textColor="@color/textColorBlack"
                android:id="@+id/stockValueText"
                android:layout_width="wrap_content"
                android:text="@string/__testNumber"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/dimen_10px"
            android:layout_marginLeft="@dimen/dimen_10px"
            style="@style/contractInfoLayoutStyle">

            <TextView
                android:textSize="@dimen/capitalTextSize"
                android:textColor="@color/textColorBlack"
                android:layout_width="wrap_content"
                android:text="管理费"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/capitalTextSize"
                android:textColor="@color/textColorBlack"
                android:id="@+id/totalText"
                android:layout_width="wrap_content"
                android:text="@string/__testNumber"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/text_22px"
        android:text="关联赛区：明日之星实盘大赛" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/text_22px"
        android:text="申请日期：2015.05.06" />
</LinearLayout>
