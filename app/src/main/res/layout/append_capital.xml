<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="@dimen/dimen_38px"
        android:id="@+id/title"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/text_30px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="追加金额" />


    <EditText
        android:layout_marginLeft="@dimen/dimen_30px"
        android:layout_marginRight="@dimen/dimen_30px"
        android:id="@+id/editPrice"
        android:textSize="@dimen/text_24px"
        android:textColor="@color/textColorBlack"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        style="@style/horizontalLine"
        android:layout_marginTop="@dimen/dimen_38px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buttonYes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_28px"
            android:padding="@dimen/dimen_15px"
            android:text="@string/yes"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/dialog_bottom_button"
            android:textColor="@drawable/color_blue_clicked" />

        <View style="@style/verticalLine" />

        <TextView
            android:id="@+id/buttonNo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_28px"
            android:padding="@dimen/dimen_15px"
            android:text="@string/no"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/dialog_bottom_button"
            android:textColor="@drawable/color_blue_clicked" />
    </LinearLayout>
</LinearLayout>