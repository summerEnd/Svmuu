<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/dialogPadding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/ic_close" />
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/login_logo" />

    <EditText
        android:layout_marginTop="@dimen/loginDialog_margin_logo"
        android:id="@+id/phoneEdit"
        android:inputType="phone"
        style="@style/loginDialogEditTextStyle"
        android:drawableLeft="@drawable/ic_phone"
        android:hint="@string/hint_phone" />

    <EditText
        android:inputType="textPassword"
        android:id="@+id/passwordEdit"
        android:drawableLeft="@drawable/ic_password"
        android:hint="@string/hint_password"
        style="@style/loginDialogEditTextStyle" />


    <Button
        android:layout_marginTop="@dimen/dimen_44px"
        android:id="@+id/confirmButton"
        style="@style/blueButton.big"
        android:layout_marginBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定" />

    <TextView
        android:id="@+id/forgetText"
        android:layout_gravity="right"
        android:textSize="@dimen/text_22px"
        android:textColor="@color/textColorGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forget_password" />
</LinearLayout>