<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_15px"
    android:background="@drawable/clicked_white"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/avatarImage"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/dimen_120px"
        android:layout_height="@dimen/dimen_120px"
        android:src="@drawable/ic_launcher"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/dimen_20px"
        android:layout_marginRight="@dimen/dimen_20px"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:textSize="@dimen/text_26px"
            android:id="@+id/nickText"
            android:textColor="@color/blackA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="股票小乐乐"/>
        <TextView
            android:id="@+id/introText"
            android:textColor="@color/grayB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一大堆啰嗦话反正要长一大堆啰嗦话反正要长一大堆啰嗦话反正要长一大堆啰嗦话反正要长"/>
    </LinearLayout>
    <TextView
        android:id="@+id/fansText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1200"
        />
</LinearLayout>