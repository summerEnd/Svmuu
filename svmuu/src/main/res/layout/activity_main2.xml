<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_210px"
            android:background="#55ee33"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.svmuu.ui.widget.CustomSearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_30px"
                android:layout_marginRight="@dimen/dimen_30px"
                android:paddingLeft="@dimen/dimen_15px"
                android:paddingRight="@dimen/dimen_15px"
                android:paddingTop="@dimen/dimen_15px"
                android:paddingBottom="@dimen/dimen_15px"
                app:searchStyle="click"
                app:iconSize="@dimen/dimen_40px"/>
        </FrameLayout>

        <View style="@style/horizontalDivider"/>

        <View
            style="@style/horizontalDivider"
            android:layout_marginTop="@dimen/dimen_30px"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dimen_10px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最近访问"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recentContainer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_180px"
                    android:orientation="horizontal">

                </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <View style="@style/horizontalDivider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dimen_10px"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐圈主"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝数"/>
        </RelativeLayout>

        <View
            style="@style/horizontalDivider"
            />

        <com.sp.lib.widget.list.LinearListView
            android:id="@+id/list"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"/>
    </LinearLayout>
</ScrollView>