<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yjy998.ui.activity.my.CenterFragment">

    <com.sp.lib.widget.PagerSlidingTabStrip
        android:id="@+id/tabStrip"
        android:layout_width="match_parent"
        app:tabBackground="@drawable/tab_selector"
        app:curTabtextColor="#666666"
        app:underlineColor="#0000"
        app:underlineHeight="0dp"
        app:dividerColor="#999999"
        android:background="#F2F2F2"
        app:indicatorColor="#2D7ACC"
        app:indicatorHeight="1dp"
        app:tabtextAllCaps="false"
        app:curTabtextSize="@dimen/text_22px"
        app:tabtextSize="@dimen/text_22px"
        android:layout_height="@dimen/center_tab_height" />

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:id="@+id/pager"
        android:layout_height="match_parent" />
</LinearLayout>
