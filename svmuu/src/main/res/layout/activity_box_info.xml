<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_15px"
    android:paddingLeft="@dimen/dimen_15px"
    android:paddingRight="@dimen/dimen_15px"
    android:paddingTop="@dimen/dimen_10px"
    tools:context="com.svmuu.ui.activity.box.BoxInfoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_corner_background"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10px"
        >

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="超级无敌比赛申请流程啊有木有（免费宝盒）"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/text_24px"/>

        <TextView
            android:id="@+id/summaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10px"
            android:lineSpacingExtra="3dp"
            android:text="宝盒间接：废话一堆废话一堆废话一堆废话一堆废话一堆废话一堆废话一堆废话一堆废话一堆废话一堆"
            android:textColor="@color/grayA"
            android:textSize="@dimen/text_22px"/>
    </LinearLayout>

    <com.sp.lib.widget.list.refresh.PullToRefreshRecyclerView
        android:id="@+id/refreshView"
        android:layout_marginTop="@dimen/dimen_30px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_corner_background"/>
</LinearLayout>
