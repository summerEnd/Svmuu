<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainTab">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabTextSize">@dimen/text_22px</item>
        <item name="tabTextColors">@drawable/main_tab_text_color</item>
        <item name="tabIcon">@drawable/tab_home</item>
        <item name="tabIconPadding">@dimen/dimen_15px</item>

    </style>

    <style name="horizontalDivider">
        <item name="android:id">@id/horizontalDivider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#d5d5d5</item>
    </style>

    <style name="topBarStyle">
        <item name="android:textColor">@color/select_bar</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_26px</item>
    </style>
</resources>