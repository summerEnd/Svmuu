<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:paddingTop="@dimen/dimen_15px"
    android:paddingBottom="@dimen/dimen_15px"
    android:paddingLeft="@dimen/dimen_11px"
    android:paddingRight="@dimen/dimen_11px"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar3" />

    <TextView
        android:id="@+id/msgText"
        android:layout_marginLeft="@dimen/dimen_8px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_20px"
        android:text="@string/loading" />
</LinearLayout>