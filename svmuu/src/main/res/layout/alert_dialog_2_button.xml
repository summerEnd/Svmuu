<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="@dimen/dimen_38px"
        android:id="@+id/title"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/text_30px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/warn" />

    <TextView
        android:layout_marginTop="@dimen/dimen_8px"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/text_24px"
        android:id="@+id/message"
        android:padding="@dimen/dimen_15px"
        android:layout_width="wrap_content"
        android:lineSpacingExtra="@dimen/dimen_8px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="密码输入错误" />

    <View
        style="@style/horizontalDivider"
        android:layout_marginTop="@dimen/dimen_38px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_28px"
            android:padding="@dimen/dimen_15px"
            android:text="@string/yes"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/dialog_bottom_button"
            android:textColor="@color/black_gray" />

        <View style="@style/verticalDivider" />

        <TextView
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_28px"
            android:padding="@dimen/dimen_15px"
            android:text="@string/no"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/dialog_bottom_button"
            android:textColor="@color/black_gray" />
    </LinearLayout>


</LinearLayout>