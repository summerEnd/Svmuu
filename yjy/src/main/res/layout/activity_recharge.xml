<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yjy998.ui.activity.main.apply.ApplyActivity">

    <com.sp.lib.widget.nav.title.PageStrip
        android:id="@+id/pageStrip"
        android:layout_width="match_parent"
        android:background="#F2F2F2"
        app:indicator="@color/deepBlue"
        android:layout_height="@dimen/center_tab_height">

        <com.yjy998.ui.view.ViewPagerTabItem
            style="@style/pageTitleStyle"
            android:checked="true"
            android:text="@string/onlinePay_yb" />


        <com.yjy998.ui.view.ViewPagerTabItem
            style="@style/pageTitleStyle"
            android:text="@string/bankPay" />
    </com.sp.lib.widget.nav.title.PageStrip>


    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:id="@+id/pager"
        android:layout_height="match_parent" />
</LinearLayout>
