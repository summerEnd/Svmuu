<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowAnimationStyle">@style/window_animation</item>
        <item name="android:windowBackground">@drawable/windowBackground</item>
        <item name="android:actionBarSize">@dimen/actionBarHeight</item>
        <item name="android:actionBarStyle">@style/mActionBarStyle</item>
        <item name="android:textColorHint">#bebebe</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:dialogTheme">@style/dialogTheme</item>
        <item name="android:homeAsUpIndicator">@drawable/nav_return</item>
        <item name="android:alertDialogTheme">@style/alertDialog</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="window_animation">
        <!--打开新的activity 用的动画-->
        <item name="android:activityOpenEnterAnimation">@anim/window_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/window_open_exit</item>

        <!--关闭activity时的动画-->
        <item name="android:activityCloseEnterAnimation">@anim/window_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/window_close_exit</item>
    </style>

    <style name="mActionBarStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/actionBarBackground</item>
        <item name="android:titleTextStyle">@style/mTitleStyle</item>
        <item name="android:displayOptions">showTitle|homeAsUp|showCustom</item>
    </style>

    <style name="dialogTheme" parent="android:Theme.Holo.Light.Dialog.MinWidth">
        <item name="android:background">#0000</item>
        <item name="android:windowBackground">@drawable/login_dialog_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/dialogAnimation</item>
    </style>

    <style name="alertDialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:windowMinWidthMajor">65%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>

    <style name="dialogAnimation">
        <item name="android:windowShowAnimation">@anim/dialog_anim_in</item>
        <item name="android:windowEnterAnimation">@anim/dialog_anim_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_anim_out</item>
    </style>
    <!--标题栏文字-->
    <style name="mTitleStyle" parent="android:TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="businessWindowAnim">

    </style>
</resources>