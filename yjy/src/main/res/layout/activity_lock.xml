<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/themeColor">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo" />

    <com.sp.lib.widget.lock.LockView
        android:id="@+id/lockView"
        android:layout_width="@dimen/lock_layout_width"
        app:src="@drawable/lock"
        app:layoutSquare="width"
        app:verticalSpacing="@dimen/lock_spacing"
        app:horizontalSpacing="@dimen/lock_spacing"
        app:lineColor="@drawable/lock_line"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/lockText"
        android:text="@string/forget_hand_password"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="#8a8c92"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
