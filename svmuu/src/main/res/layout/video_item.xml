<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_8px"
    android:background="@drawable/clicked_white"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/cover"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_180px"/>
    <TextView
        android:id="@+id/subject"
        android:textColor="@color/black"
        android:textSize="@dimen/text_22px"
        android:layout_width="wrap_content"
        android:text="第五讲：如何成为巴菲特"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dimen_10px"
        android:text="2015-09-11 21:20"
        android:textSize="@dimen/text_20px"
        android:textColor="#a0a0a0"
        android:layout_height="wrap_content"/>

</LinearLayout>