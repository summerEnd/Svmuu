<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainTab">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabTextSize">@dimen/text_22px</item>
        <item name="tabIcon">@drawable/tab_home</item>
        <item name="tabIconPadding">@dimen/dimen_15px</item>

    </style>

    <style name="horizontalDivider">
        <item name="android:id">@id/divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#d5d5d5</item>
    </style>


    <style name="horizontalDivider.menuStyle">
        <item name="android:background">#3d3b3c</item>
    </style>

    <style name="verticalDivider" parent="horizontalDivider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1px</item>
    </style>


    <style name="MenuClickItem">
        <item name="android:background">@drawable/main_menu_click_item</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dimen_36px</item>
        <item name="android:paddingRight">@dimen/dimen_36px</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginBottom">1px</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@color/gray_white</item>
        <item name="android:drawableRight">@drawable/leftbar_jump_selector</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dimen_32px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_24px</item>
    </style>

    <style name="MenuIconStyle">
        <item name="android:duplicateParentState">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">@dimen/menuIconSize</item>
        <item name="android:layout_height">@dimen/menuIconSize</item>
    </style>

    <style name="indexBigIconContainer">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="indexBigIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="indexBigIconText">
        <item name="android:layout_marginTop">@dimen/dimen_8px</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackA</item>
        <item name="android:text">dasfasdfas</item>
    </style>

    <style name="settingClick">
        <item name="android:background">@drawable/clicked_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dimen_36px</item>
        <item name="android:paddingRight">@dimen/dimen_36px</item>
        <item name="android:paddingTop">@dimen/dimen_20px</item>
        <item name="android:paddingBottom">@dimen/dimen_20px</item>
        <item name="android:textSize">@dimen/text_24px</item>
        <item name="android:textColor">#333333</item>
        <item name="android:drawableRight">@drawable/leftbar_jump_normal</item>
    </style>

    <style name="EditStyle_grayFrame">
        <item name="android:background">@drawable/gray_frame</item>
    </style>

    <style name="SignInEditStyle" parent="EditStyle_grayFrame">
        <item name="android:textColor">@color/blackA</item>
        <item name="android:drawablePadding">@dimen/dimen_15px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_24px</item>
        <item name="android:paddingTop">@dimen/dimen_8px</item>
        <item name="android:paddingBottom">@dimen/dimen_8px</item>
        <item name="android:paddingLeft">@dimen/dimen_20px</item>
        <item name="android:paddingRight">@dimen/dimen_20px</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="liveTabButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/check_white_normal_red</item>
        <item name="android:textSize">@dimen/text_24px</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/tab_red</item>
        <item name="android:paddingTop">@dimen/dimen_8px</item>
        <item name="android:paddingBottom">@dimen/dimen_8px</item>
    </style>

    <style name="liveTypeSelector">
        <item name="android:padding">@dimen/dimen_10px</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/check_red_normal_gray</item>
        <item name="android:textSize">@dimen/text_24px</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/dimen_8px</item>
    </style>

    <style name="boxTabStyle">
        <item name="android:paddingTop">@dimen/dimen_10px</item>
        <item name="android:paddingBottom">@dimen/dimen_10px</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_24px</item>
        <item name="android:textColor">@color/check_red_normal_gray</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="search_text_style">
        <item name="android:textSize">@dimen/text_22px</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">#0000</item>
        <item name="android:layout_toLeftOf">@+id/cross</item>
        <item name="android:layout_toRightOf">@+id/search</item>
        <item name="android:hint">@string/search_hint</item>
    </style>

    <style name="chatItemNick">
        <item name="android:id">@id/chatItemNick</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxWidth">@dimen/dimen_210px</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">#a0a0a0</item>
        <item name="android:textSize">@dimen/text_22px</item>
    </style>

    <style name="chatItemFansIcon">
        <item name="android:id">@id/chatItemFans</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="chatItemContent">
        <item name="android:id">@id/chatItemContent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoLink">none</item>
        <item name="android:textColor">#242424</item>
        <item name="android:textSize">@dimen/text_24px</item>
    </style>

    <style name="chatItemJob">
        <item name="android:id">@id/chatItemJob</item>
        <item name="android:layout_width">@dimen/avatarSizeSmall</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/chat_job</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="chatItemAvatar">
        <item name="android:id">@id/chatItemAvatar</item>
        <item name="android:layout_width">@dimen/avatarSizeSmall</item>
        <item name="android:layout_height">@dimen/avatarSizeSmall</item>
    </style>

    <style name="chatItemBackground">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/white_corner_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dimen_10px</item>
    </style>


</resources>